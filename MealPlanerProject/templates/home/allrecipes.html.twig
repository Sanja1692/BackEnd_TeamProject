{% extends 'base.html.twig' %}

{% block title %}Jungle food!{% endblock %}

{% block body %}
        {% include "components/navbar.html.twig" %}

        <div class="nsl"> </div>
        <div class="nsl"> </div>
        <div class="nsl"> </div>
        

 <div class="scrollmenu nsl">
        {% for type in types %}
       
            <a href="/filter/{{type.id}}">{{type.name}}</a>
        
        {% endfor %}
        
    </div>

    <div class="container">
       <h3>All</h3>
    </div>

    <div class="row d-flex justify-content-center">
        {% for recipe in recipes %}
        <div class="col-lg-4 col-md-6 col-sm-12 row justify-content-center">


            <div class='boox2'>
                <a href="/details/{{recipe.id}}" class="btn eddt">
                    <img class="im-size2"  src="{{asset('pictures/' ~ recipe.picture)}}">
                </a> 
            </div>
        
            <div class='nsl2'></div>
                <a href="/details/{{recipe.id}}" class="btn eddt col-12 text-left">
                    <h4 class="inft">{{recipe.name}} </h4>
                </a> 
                <a href="/details/{{recipe.id}}" class="btn col-6">
                    <p class="inftx">Calories: {{recipe.calories}}</p>
                </a> 
                <a href="/details/{{recipe.id}}" class="btn col-6">
                    <p class="inftx">Time: {{recipe.cookTime}}</p>
                </a> 
        </div>
        {% endfor %}

        
    </div>

{% endblock %}

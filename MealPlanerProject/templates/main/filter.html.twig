                </a> 
            </div>
        
            <div class='nsl2'></div>
                <a href="/details/{{recipe.fkrecipes.id}}" class="btn eddt col-12 text-left">
                    <h4 class="inft">{{recipe.fkrecipes.name}}</h4>
                </a> 
                
                <a href="/details/{{recipe.fkrecipes.id}}" class="btn col-6">
                    <p class="inftx">Time: {{recipe.fkrecipes.cookTime}}</p>
                </a> 
        </div>
        {% endfor %}

        
    </div>


{% endblock %}





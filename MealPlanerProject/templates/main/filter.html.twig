{% block title %}Jungle food!{% endblock %}


{% block body %}
        {% include "components/navbar.html.twig" %}

 
  <div class="captionfilt">
    <div class="titles">
    <h1 class="titles text-left">{{recipes.0.fktypes.name}}</h1> 
    </div>
  </div>

  

  <h1 class="text-center nsl ev">Recipes</h1>



    <div class="container">
       <h3>All</h3>
    </div>


{% extends 'base.html.twig' %}

{% block title %}Log in{% endblock %}


{% block body %}
        {% include "components/navbar.html.twig" %}


<div class="d-flex align-items-center split justify-content-center">
   

<main class="form-signin text-center">
<form method="post">

  {% if error %}
  <div class="alert alert-danger">{{error.messageKey|trans(error.messageData, 'security') }}</div>
  {% endif %}

  {% if app.user %}
  <div class="mb-3">
    {# You are logged in as {{ app.user.username }}, 
    <a href="{{ path('app_logout') }}">Logout</a> #}
  </div>
  {% endif %}

  <h1 class="h3 mb-3 fw-normal">User Login</h1>

  {# Email Input #}
  <div class="form-floating">
    <input type="email" name="email" id="inputEmail" value="{{last_username}}" class="form-control" autocomplete="email" placeholder="name@example.com" required autofocus maxlength="255">
    <label for="inputEmail">Email</label>
  </div>

  {# Password Input #}
  <div class="form-floating">
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" placeholder="Password" required>
    <label for="inputPassword">Password</label>
  </div>
  
  <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
  {#
  Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
  See https://symfony.com/doc/current/security/remember_me.html

  <div class="checkbox mb-3">
    <label>
      <input type="checkbox" name="_remember_me"> Remember me
    </label>
  </div>
  #}

  <button class="w-100 btn btn-block btn-lg eddt2 mt-1" name="btn-login" type="submit">Log in</button>

  </form>

<a class="nav-link eddt fourc" href="/register">Not registered yet? Click here<br>to sign up for a free account!</a>
</main>

</div>
{% endblock %}
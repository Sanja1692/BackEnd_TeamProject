{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}

    <div class="container">
 <div class="nsl"></div>
 <div class="nsl"></div>
 

    <h1>Users</h1>




    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>First name</th>
                <td>{{ user.fname }}</td>
            </tr>
            <tr>
                <th>Last name</th>
                <td>{{ user.lname }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td><img src="{{asset('pictures/' ~ user.picture)}}"></td>
            </tr>
            <tr>
                <th>Blocked</th>
                <td>{{ user.blocked }}</td>
            </tr>
            
            
        </tbody>
    </table>

    <a href="{{ path('app_users_index') }}">Back to list</a>

    <a href="{{ path('app_users_edit', {'id': user.id}) }}">Edit</a>

    {{ include('users/_delete_form.html.twig') }}

    </div>
{% endblock %}
